<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Activities.AuctionItemActivity">


    <TextView
        android:id="@+id/txt_auction_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/metropolis_bold"
        android:text="Auction Item"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="@color/mainText"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LayoutTop" />

    <LinearLayout
        android:id="@+id/LayoutTop"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_back"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="0.4"
            android:background="@drawable/back_arrow"
            android:fontFamily="@font/metropolis_regular"
            android:layout_marginLeft="15dp"
            android:gravity="left"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/txt_sign_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:layout_marginRight="7dp"
            android:fontFamily="@font/metropolis_regular"
            android:gravity="right"
            android:text="Sign Out"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txt_auction_item">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/metropolis_bold"
            android:text="Name:"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edit_txt_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_bg"
            android:drawableRight="@null"
            android:fontFamily="@font/metropolis_regular"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:maxLength="15"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/mainText"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/metropolis_bold"
            android:text="Description:"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edit_txt_description"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_bg"
            android:drawableRight="@null"
            android:fontFamily="@font/metropolis_regular"
            android:maxLines="4"
            android:maxLength="100"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/mainText"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/metropolis_bold"
            android:text="Starting Price:"
            android:textSize="16sp" />

        <EditText

            android:id="@+id/edit_txt_starting_price"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_bg"
            android:drawableRight="@null"
            android:fontFamily="@font/metropolis_regular"
            android:inputType="number"
            android:maxLines="1"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/mainText"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_pick_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="110dp"
            android:background="@drawable/btn_bg"
            android:elevation="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Pick Images"
            android:textColor="@color/white" />

        <ImageSwitcher
            android:id="@+id/img_switcher1"
            android:layout_marginTop="10dp"
            android:layout_width="210dp"
            android:layout_marginStart="75dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_height="160dp"/>


        <Button
            android:id="@+id/btn_auction_item2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_bg"
            android:elevation="10dp"
            android:text="AUCTION ITEM"
            android:textColor="@color/white" />



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>